<main class="container">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <h1 class="card-header text-center">
                        ĐĂNG KÍ THÀNH VIÊN
                    </h1>
                    <div class="card-body">
                        <form action="/auth/register" method="post" id="ajaxSubmitForm">
                            <div class="mb-3">
                                <label for="username" class="form-label">Tên của bạn</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Tên của bạn"
                                    required>
                            </div>
                            <div class="mb-3">
                                <label for="username" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    placeholder="example@gmail.com" required>
                            </div>
                            <div class="mb-3">
                                <label for="username" class="form-label">Tên đăng nhập</label>
                                <input type="text" class="form-control" id="username" name="username"
                                    placeholder="Tên đăng nhập">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Mật khẩu của bạn" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Đăng Kí</button>
                            </div>
                            <hr>
                            <p class="text-danger">Nếu có tài khoản đăng nhập: <a href="/auth/login">Tại Đây</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>